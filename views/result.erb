<div class="result-container">
  <div class="result-meta">
    <div class="prompt-title">Girdiğiniz Metin</div>
    <div class="prompt-content"><%= @text %></div>
  </div>

  <% if @insecure_used %>
    <div class="alert-warning">
      <strong>Uyarı:</strong> Güvenlik doğrulaması devre dışı bırakıldı. Bu yalnızca geliştirme amaçlıdır.
    </div>
  <% end %>

  <div class="prompt-title">Yapay Zekanın Yanıtı</div>
  <div class="generated-markdown">
    <%= markdown_to_html(@generated_text) %>
  </div>

  <div style="margin-top: 2rem; border-top: 1px solid rgba(0,0,0,0.05); padding-top: 1.5rem;">
    <a href="/" class="btn" style="width: auto; background: transparent; color: var(--primary); border: 2px solid var(--primary);">Yeni Bir Şey Sor</a>
  </div>
</div>
